async function generateIcon(svgContent, size) {
  try {
    // Create a data URL from the SVG
    const svgDataUrl = 'data:image/svg+xml;base64,' + Buffer.from(svgContent).toString('base64');
    
    // Load the SVG as an image
    const img = await loadImage(svgDataUrl);
    
    // Create canvas
    const canvas = createCanvas(size, size);
    const ctx = canvas.getContext('2d');
    
    // Draw the image
    ctx.drawImage(img, 0, 0, size, size);
    
    // Convert to PNG buffer
    const buffer = canvas.toBuffer('image/png');
    
    // Save to file
    fs.writeFileSync(`public/icon-${size}x${size}.png`, buffer);
    console.log(`‚úÖ Generated icon-${size}x${size}.png`);
    
  } catch (error) {
    console.error(`‚ùå Error generating ${size}x${size} icon:`, error);
  }
}

async function generateIcons() {
  console.log('üé® Generating PWA icons...');
  await generateIcon(svg192, 192);
  await generateIcon(svg512, 512);
  console.log('‚úÖ All icons generated successfully!');
}

